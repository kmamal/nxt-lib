{
  "name": "@nxtedition/lib",
  "version": "2.9.34",
  "files": [
    "rxjs/*",
    "util/*",
    "subtract-ranges.js",
    "serializers.js",
    "merge-ranges.js",
    "http.js",
    "destroy.js",
    "deepstream.js",
    "logger.js",
    "app.js"
  ],
  "scripts": {
    "prepare": "cp -r src/* .",
    "test": "jest --bail --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-commit": "files=`git diff --cached --diff-filter=d --name-only | grep '\\.js$' || true` && ( [ -z \"$files\" ] || eslint --format=unix $files )",
      "commit-msg": "validate-commit-msg"
    }
  },
  "author": "Robert Nagy <robert.nagy@boffins.se>",
  "license": "UNLICENSED",
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "overrides": [
      {
        "files": [
          "*.test.js"
        ],
        "env": {
          "jest": true
        },
        "plugins": [
          "jest"
        ],
        "rules": {
          "jest/no-disabled-tests": "warn",
          "jest/no-focused-tests": "error",
          "jest/no-identical-title": "error",
          "jest/prefer-to-have-length": "warn",
          "jest/valid-expect": "error"
        }
      }
    ]
  },
  "devDependencies": {
    "eslint": "^6.2.1",
    "eslint-config-standard": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.15.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "nodemon": "^1.19.1",
    "standard": "^14.0.0",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {
    "@yarnpkg/lockfile": "^1.1.0",
    "hasha": "^4.0.1",
    "http-errors": "^1.7.3",
    "json5": "^2.1.0",
    "lodash": "^4.17.15",
    "memoizee": "^0.4.14",
    "merge-ranges": "^1.0.2",
    "moment": "^2.24.0",
    "nested-error-stacks": "^2.1.0",
    "object-hash": "^1.3.1",
    "once": "^1.4.0",
    "semver": "^7.1.2",
    "split-string": "^6.0.0",
    "statuses": "^1.5.0",
    "xuid": "^3.0.2"
  },
  "peerDependencies": {
    "pino": ">=5.6.2",
    "pino-pretty": ">=2.2.1",
    "rxjs": ">=5.x"
  }
}
